<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity">

    <TextView
        android:id="@+id/textViewAttack2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyökkäys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAttack1T"
        app:layout_constraintTop_toBottomOf="@+id/textLutemon2T" />

    <TextView
        android:id="@+id/textViewPickLutemonsT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valitse 2 Lutemonia harjoittelemaan:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutBoxesT"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textViewPickLutemonsT"
        tools:layout_editor_absoluteX="88dp"></LinearLayout>

    <Button
        android:id="@+id/buttonStartFightT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startBattle"
        android:text="Aloita harjoittelu!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBoxesT" />

    <TextView
        android:id="@+id/textView5T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Harjoittelussa:"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartFightT" />

    <TextView
        android:id="@+id/textLutemon1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Lutemon 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5T" />

    <TextView
        android:id="@+id/textLutemon2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Lutemon 2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textLutemon1T"
        app:layout_constraintTop_toBottomOf="@+id/textView5T" />

    <TextView
        android:id="@+id/textViewAttack1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hyökkäys"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textLutemon1T" />

    <TextView
        android:id="@+id/textViewDefense1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puolustus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAttack1T" />

    <TextView
        android:id="@+id/textViewHealth1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elämä"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDefense1T" />

    <TextView
        android:id="@+id/textViewExperience1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kokemus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHealth1T" />

    <TextView
        android:id="@+id/textViewDefense2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puolustus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDefense1T"
        app:layout_constraintTop_toBottomOf="@+id/textViewAttack2T" />

    <TextView
        android:id="@+id/textViewHealth2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elämä"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewHealth1T"
        app:layout_constraintTop_toBottomOf="@+id/textViewDefense2T" />

    <TextView
        android:id="@+id/textViewExperience2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kokemus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewExperience1T"
        app:layout_constraintTop_toBottomOf="@+id/textViewHealth2T" />

    <ImageView
        android:id="@+id/imageViewL1T"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewDefense2T"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toEndOf="@+id/textViewDefense1T"
        app:layout_constraintTop_toBottomOf="@+id/textView5T"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageViewL2T"
        android:layout_width="77dp"
        android:layout_height="71dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toEndOf="@+id/textViewDefense2T"
        app:layout_constraintTop_toBottomOf="@+id/textView5T"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewBattleTextT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewExperience2T" />

    <Button
        android:id="@+id/buttonToMainT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="switchToMainActivityFromTraining"
        android:text="Etusivulle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPickTwoLutemonsT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valitse Lutemonit"
        app:layout_constraintEnd_toStartOf="@+id/buttonStartFightT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBoxesT" />

    <ImageView
        android:id="@+id/imageBattleL1T"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonToMainT"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imageBattleL2T"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageBattleL1T"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonAttack1T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Hyökkää1"
        app:layout_constraintEnd_toStartOf="@+id/textView5T"
        app:layout_constraintTop_toBottomOf="@+id/buttonPickTwoLutemonsT" />

    <Button
        android:id="@+id/buttonAttack2T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Hyökkää2"
        app:layout_constraintStart_toEndOf="@+id/textView5T"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartFightT" />

</androidx.constraintlayout.widget.ConstraintLayout>